@model Task3.ViewModels.InventoryDeleteViewModel

<h1>Are you sure you want to delete this inventory type?</h1>
<form asp-action="Delete" asp-controller="InventoryType" method="POST">
    <input type="hidden" asp-for="Id" />

    <div class="list-group">
        <div class="list-group-item d-flex justify-content-between">
            <div class="font-weight-bold">@Model.Name</div>
        </div>
    </div>

    <hr>
    <div class="flex-lg-row">
        <a asp-controller="InventoryType" asp-action="Index" class="btn btn-secondary">< Back</a>
        <button class="btn btn-danger" type="submit">Delete Inventory Type</button>
    </div>
</form>