@model List<Task3.ViewModels.SchoolViewModel>
@{
    ViewData["Title"] = "Forum Page";
}

<h1>Schools</h1>
<hr>
<a asp-controller="School" asp-action="Create" class="btn btn-success mb-3">+ Create School</a>
@foreach (var item in Model)
{
<div class="list-group">
    <div class="list-group-item d-flex flex-column">
        <div class="d-flex justify-content-between">
            <a class="h3" asp-action="Details" asp-controller="School" asp-route-id="@item.Id">@item.Name</a>
            <div style="display: flex; gap: 10px;">
                @if (User.IsInRole("Admin"))
                {
                    <a class="text-danger" asp-action="Delete" asp-controller="School" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Edit" asp-controller="School" asp-route-id="@item.Id">Edit</a>
                }
            </div>
        </div>
    </div>
</div>
}


